{
  "name": "omg-js",
  "version": "0.1.0",
  "private": true,
  "description": "JavaScript Library to interact with OMG Network",
  "scripts": {
    "postinstall": "./node_modules/.bin/lerna bootstrap --hoist",
    "test": "./node_modules/.bin/standard && ./node_modules/.bin/mocha packages/omg-js-childchain/test packages/omg-js-rootchain/test packages/omg-js-util/test",
    "build": "browserify browserify.js -o dist/omg.js",
    "build-doc": "documentation build packages/omg-js/src/** packages/omg-js-childchain/src/** packages/omg-js-rootchain/src/** packages/omg-js-util/src/** --config documentation.yml -f html -o docs",
    "integration-test": "./node_modules/.bin/mocha --timeout=0 packages/integration-tests/test",
    "ci-test": "./node_modules/.bin/mocha --timeout=0 --grep ci-enabled packages/integration-tests/test",
    "ci-test-fast": "./node_modules/.bin/mocha --timeout=0 --grep ci-enabled-fast packages/integration-tests/test"
  },
  "author": "OmiseGo",
  "contributors": [
    "Pong Cheecharern <pong@omise.co>",
    "Kevin Sullivan <kevinsul@omise.co>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/omisego/omg-js.git"
  },
  "bugs": {
    "url": "https://github.com/omisego/omg-js/issues"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^6.0.0",
    "lerna": "^3.14.1",
    "mocha": "^5.2.0",
    "nock": "^9.6.1",
    "request-promise": "^4.2.4",
    "sinon": "^7.5.0",
    "standard": "^12.0.1",
    "truffle": "^4.1.14",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "docs",
      "dist",
      "packages/integration-tests/tokens"
    ]
  }
}
